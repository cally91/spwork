$(function() {
	
	$("btn-save").click(function() {
	// 유효성 검사
	if($("#io_date").val() == ""){
		alert("거래일자를 입력하세요")
		$("#io_date").focus()
		return false
	}
	
	if($(":radio[name='io_inout':checked").length < 1){
		alert(" 매입매출을 입력하세요")
		$("#io_inout").focus()
		return false;
	}
	
		if($("#io_ccode").val() == ""){
			alert("거래처를 선택하세요")
			$("#comp_name").focus()
		return false;
		}
		
		if($("#io_pcode").val() == ""){
			alert("상품를 선택하세요")
			$("#pro_name").focus()
		return false;
		}
		
		if($("#io_price").val() == ""){
			alert("상품단가를 입력하세요")
			$("#io_price").focus()
		return false;
		}
		if(isNaN($("#io_price"))){
			alert("단가는 숫자로 입력하세여")
			$("#io_price").focus()
			$("#io_price").seleted()
			return false;
			
		}
		
		if($("#io_qty").val() == ""){
			alert("상품단가를 입력하세요")
			$("#io_price").focus()
		return false;
		}
		if(isNaN($("#io_qty"))){
			alert("단가는 숫자로 입력하세여")
			$("#io_price").focus()
			$("#io_price").seleted()
			return false;
			
		}
		
	})
})
